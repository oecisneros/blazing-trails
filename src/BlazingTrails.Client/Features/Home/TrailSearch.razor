@inject NavigationManager navigation

<div class="jumbotron">
    <h1 class="display-4 text-center">Welcome to Blazing Trails</h1>
    <p class="lead text-center">Find the most beautiful hiking trails using our blazing fast search!</p>
    <p class="mt-4">
        <input @onkeydown="SearchForTrail"
               @bind="searchTerm"
               @bind:event="oninput"
               type="text"
               placeholder="Search for a trail..."
               class="form-control form-control-lg" />
    </p>
</div>

@code {
    private string searchTerm = "";

    public void SearchForTrail(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            navigation.NavigateTo($"/search/{searchTerm}");
        }
    }
}